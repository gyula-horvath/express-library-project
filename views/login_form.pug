extends layout

block content
  h1 Log in

  form(method='POST' action='/user/login')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='username123' name='username' /*value=(undefined===user ? '' : user.username)*/)
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='password' name='password' /*value=(undefined===user ? '' : user.password)*/)
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg