extends layout

block content
  h1 Register

  form(method='POST' action='/users/register')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='John Doe' name='name' /*value=(undefined===user ? '' : user.name)*/)
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text', placeholder='example@example.com' name='email' /*value=(undefined===user ? '' : user.email)*/)
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='username123' name='username' /*value=(undefined===user ? '' : user.username)*/)
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='password' name='password' /*value=(undefined===user ? '' : user.password)*/)
    div.form-group
      label(for='password2') Confirm password:
      input#password2.form-control(type='password', placeholder='Confirm password' name='password2' /*value=(undefined===user ? '' : user.password2)*/)
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg